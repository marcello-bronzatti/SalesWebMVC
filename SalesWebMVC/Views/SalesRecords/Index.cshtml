@model IEnumerable<SalesWebMVC.Models.SalesRecord>

@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group">
                    <label for="initial" class="col-lg-2 control-label">Initial Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="initial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="final" class="col-lg-2 control-label">Final Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="final" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>


        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Group search</legend>
                <div class="form-group">
                    <label for="initial" class="col-lg-2 control-label">Initial Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="initial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="final" class="col-lg-2 control-label">Final Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="final" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>


            </fieldset>
        </form>
    </div>
</div>